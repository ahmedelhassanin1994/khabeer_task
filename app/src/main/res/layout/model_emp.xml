<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/_120sdp"
    app:ignore="NamespaceTypo">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:id="@+id/card_view"
        app:ignore="NamespaceTypo"
        card_view:cardCornerRadius="@dimen/_13sdp"
        card_view:cardElevation="@dimen/_5sdp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5">


                <!-- LEFT TITLE PART -->
                <LinearLayout
                    android:layout_width="@dimen/_170sdp"
                    android:id="@+id/linear_img_cancel"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:orientation="vertical"
                    app:ignore="MissingConstraints"
                    app:layout_editor_absoluteY="19dp"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.0"
                    card_view:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/type_factor"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="Services"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@color/purple_700"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginBottom="@dimen/_3sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="*/**/****"
                        android:id="@+id/text_date"
                        android:textColor="@color/purple_700"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/text_address"
                        android:text="Lab"
                        android:textColor="@color/purple_700"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_editor_absoluteX="@dimen/_145sdp"
                    card_view:layout_editor_absoluteY="@dimen/_8sdp" android:layout_width="@dimen/_110sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:foregroundGravity="center"
                        android:background="@color/gray"
                        android:id="@+id/img"
                        android:src="@drawable/ic_baseline_person_24"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:id="@+id/textView_amount"
                        android:textSize="@dimen/_17sdp"
                        android:text="0 LE"/>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>