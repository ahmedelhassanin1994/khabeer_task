<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="EmployeeViewModel"
            type="com.example.khabeer_task.ui.main.employee.EmployeeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/tools"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:orientation="horizontal"
                    app:ignore="NamespaceTypo">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        app:ignore="NamespaceTypo"
                        card_view:cardCornerRadius="@dimen/_13sdp"
                        card_view:cardElevation="@dimen/_5sdp"
                        card_view:cardPreventCornerOverlap="false"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="5">


                                <!-- LEFT TITLE PART -->
                                <LinearLayout
                                    android:id="@+id/linear_img_cancel"
                                    android:layout_width="@dimen/_170sdp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    android:layout_marginEnd="@dimen/_3sdp"
                                    android:orientation="vertical"
                                    app:ignore="MissingConstraints"
                                    app:layout_editor_absoluteY="19dp"
                                    card_view:layout_constraintEnd_toEndOf="parent"
                                    card_view:layout_constraintHorizontal_bias="0.0"
                                    card_view:layout_constraintStart_toStartOf="parent">

                                    <TextView
                                        android:id="@+id/txt_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_9sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:layout_marginBottom="@dimen/_3sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:text=""
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_14sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/text_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginTop="@dimen/_8sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:text=""
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_20sdp"
                                        android:orientation="vertical"
                                        android:weightSum="5">


                                        <!-- LEFT TITLE PART -->
                                        <LinearLayout
                                            android:layout_width="199dp"
                                            android:layout_height="match_parent"
                                            android:layout_alignParentStart="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignParentBottom="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_3sdp"
                                            android:orientation="horizontal"
                                            app:ignore="MissingConstraints"
                                            app:layout_editor_absoluteY="13dp"
                                            card_view:layout_constraintEnd_toEndOf="parent"
                                            card_view:layout_constraintHorizontal_bias="0.0"
                                            card_view:layout_constraintStart_toStartOf="parent">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/totlal_salary"
                                                android:textColor="@color/purple_700"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            card_view:layout_constraintEnd_toEndOf="parent"
                                            card_view:layout_constraintTop_toTopOf="parent">

                                            <TextView
                                                android:id="@+id/total"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/_9sdp"
                                                android:layout_marginRight="@dimen/_9sdp"
                                                android:gravity="center"
                                                android:text=""
                                                android:textColor="@color/read"
                                                android:textSize="@dimen/_12sdp"
                                                android:textStyle="bold" />

                                        </LinearLayout>
                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    card_view:layout_constraintBottom_toBottomOf="parent"
                                    card_view:layout_constraintEnd_toEndOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent"
                                    card_view:layout_editor_absoluteX="@dimen/_145sdp"
                                    card_view:layout_editor_absoluteY="@dimen/_8sdp">


                                    <ImageView
                                        android:id="@+id/img"
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/circle"
                                        android:foregroundGravity="center"
                                        android:src="@drawable/ic_baseline_person_24" />


                                    <TextView
                                        android:id="@+id/textView_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/border"
                    android:elevation="@dimen/_2sdp"
                    android:padding="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardPreventCornerOverlap="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:weightSum="5">


                            <LinearLayout
                                android:layout_width="206dp"
                                android:layout_height="182dp"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:layout_editor_absoluteY="6dp">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/liner"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@color/gray"
                                        android:orientation="horizontal" />

                                    <TextView
                                        android:id="@+id/totla_allowences"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@color/yellow"
                                        android:orientation="horizontal" />

                                    <TextView
                                        android:id="@+id/totla_deduction"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@color/teal_700"
                                        android:orientation="horizontal" />

                                    <TextView
                                        android:id="@+id/totla_salary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_8sdp"
                                        android:layout_marginRight="@dimen/_8sdp"
                                        android:drawablePadding="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:textColor="@color/gray"
                                        android:textSize="@dimen/_9sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                            </LinearLayout>

                            <ir.mahozad.android.PieChart
                                android:id="@+id/pieChart"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_120sdp"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="32dp"
                                tools:layout_editor_absoluteY="0dp" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <TableLayout
                            android:id="@+id/tableInvoices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_13sdp"
                            android:background="@drawable/border"
                            android:stretchColumns="*">

                            <TableRow android:background="@color/purple_700"

                                >

                                <TextView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_10sdp"
                                    android:text="id"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/headerTextSize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_13sdp"
                                    android:text="Type"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/headerTextSize"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:padding="@dimen/_13sdp"
                                    android:text="Value"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/headerTextSize"
                                    android:textStyle="bold" />

                            </TableRow>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recylerview_emp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                        </TableLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>

